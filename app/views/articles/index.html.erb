<h1 class="article-title">Articles</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author Name</th>
            <th>Body</th>
            <th class="actions">Actions</th>
        </tr>
    </thead>

    <tbody>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.author_name %></td>
            <td><%= truncate(article.body, length: 50) %></td>
            <td class="actions">
                <%= link_to 'Show', article_path(article) %>
                <%= link_to 'Edit', edit_article_path(article) %>
                <%= link_to 'Delete', delete_article_path(article) %>
            </td>
        </tr>
    
    <% end %>
    </tbody>
</table>

<div class="button">
   <%= link_to 'New Article', new_article_path, style: 'text-decoration: none;' %>
</div><br>


